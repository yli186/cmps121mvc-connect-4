<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameviewxml"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >


    <Button
        android:id="@+id/button9"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp"
        android:text="X" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button4"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button5"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button6"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button7"
        android:layout_marginLeft="4dp"
        />

    <Button
        android:id="@+id/button10"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button8"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/SaveNExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button8"
        android:layout_alignParentEnd="true"
        android:text="Save/Exit"

        />

    <TextView
        android:id="@+id/redwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED WINS!"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/SaveNExit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/greenwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN WINS!"
        android:layout_alignBottom="@+id/redwin"
        android:layout_toEndOf="@+id/button5"
        android:layout_marginBottom="44dp" />

    <TextView
        android:id="@+id/draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRAW!"
        android:layout_alignTop="@+id/back"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_above="@+id/button4"
        android:layout_toStartOf="@+id/button5"
        android:onClick="BackToMain"/>
</RelativeLayout>
